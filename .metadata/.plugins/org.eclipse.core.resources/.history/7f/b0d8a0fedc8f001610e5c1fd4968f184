#include <iostream>

#include "calculatorFunction.h";

using namespace std;

int main(int argc, const char * argv[]) {
	int a, b, choice = {0};

	puts("Simple calculator!");

	puts("Choose what you would like!");
	puts("1: For add!");
	puts("2: For subtraction!");
	puts("3: For multiply!");
	puts("4: For division!");
	puts("5: For modulus!");
	puts("Enter quit to exit");

do {


	puts("Enter a");
	cin >> a;
	puts("Enter b");
	cin >> b;
	int sub = subtract(a, b);

	printf("Result is: %d", sub);
} while(choice != -1);



	return 0;

}



